pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'docker build -t thomptyler/flaskapp .'
            }
        }
        stage('Login and Push'){
            steps{
                script{
                    withDockerRegistry(credentialsId: 'Docker') {
                            docker.build('thomptyler/flaskapp').push('latest')
                    }
                }
            }
        }
    }
}